<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true">
        <ripple android:color="@color/grey" />
    </item>

    <item android:drawable="@color/sunshine_light_blue" android:state_activated="true" />

    <item android:drawable="@color/sunshine_light_blue" android:state_selected="true" />

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
         of a ListView -->
    <item android:drawable="@color/primary" android:state_activated="true" />

</selector>